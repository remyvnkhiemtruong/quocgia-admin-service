// src/app.js
require('dotenv').config();
const express = require('express');
const cors = require('cors');
const path = require('path');
const routes = require('./routes');

const app = express();
const PORT = process.env.PORT || 5000;

// Middleware
app.use(cors({ app.use(express.json()); origin: [ 'https://gddpcamau.io.vn', // Serve static files (audio, images) 
        'https://www.gddpcamau.io.vn', app.use('/uploads', express.static(path.join(__dirname, '../uploads'))); 
        'http://localhost:5173' // Để test dưới local nếu cần
    ],// Routes app.use('/api', routes); credentials: true
}));
// Health check
app.get('/health', (req, res) => {
  res.json({ status: 'ok', timestamp: new Date().toISOString() });
});

// Error handler
app.use((err, req, res, next) => {
  console.error(err.stack);
  res.status(500).json({ error: 'Something went wrong!' });
});

app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});
